{% extends 'base.html.twig' %}

{% block body %}
    <main class="container">
        <div class="row">
            <div class="col-12">
                <h1>Thomas Food üçî</h1>
                <p>
                    <a href="{{ path('app_logout') }}">Logout</a>
                </p>
                <p>
                    <a href="{{ path('configure') }}">Configure, Edit, and Delete</a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <h2>Tracked foods</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    {% for food in trackedFood %}
                        <div class="col">
                            <div class="card text-white {{ isOk(food) ? 'bg-success' : 'bg-danger' }}">
                                <div class="card-header">
                                    <h4 class="card-title">{{ food.description }}</h4>
                                </div>
                                <div class="card-body">
                                    <div>
                                        {% if isOk(food) %}
                                            üëç Ok to eat
                                        {% else %}
                                            üëé Stay away
                                            <p>
                                                <small>You can eat {{ nextAllowedDate(food)|ago }}</small>
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="card">
                            <div class="card-body">
                                No tracked foods created yet. You should <a href="{{ path('configure') }}">configure</a>
                                some.
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-sm-6">
                <h2>Logs</h2>
                <h3>New log</h3>
                {{ form_start(newLogForm) }}
                {{ form_widget(newLogForm) }}
                <p>
                    <button class="btn btn-primary" type="submit">I ate this right now</button>
                </p>
                {{ form_end(newLogForm) }}
                <h3>Past logs</h3>
                <ul>
                    {% for log in logs %}
                        <li>
                            <p>You ate <strong>{{ log.trackedFood.description }}</strong> <u
                                    title="{{ log.createdAt|date('M j, Y', 'America/Chicago') }}">{{ log.createdAt|ago }}</u>
                                {% if log.description %}
                                    <br>
                                    <small>{{ log.description }}</small>
                                {% endif %}
                            </p>
                        </li>
                    {% else %}
                        <li>No logs created yet.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </main>
{% endblock %}
